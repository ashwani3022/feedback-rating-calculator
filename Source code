import java.util.Scanner;
public class Calculator {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        System.out.println(" Rate our product in Scale of 1 to 5 ");
        System.out.println("where, ");
        System.out.println(" 1 is Bad ");
        System.out.println(" 2 is Satisfactory ");
        System.out.println(" 3 is Good ");
        System.out.println(" 4 is Very Good ");
        System.out.println(" 5 is Awesome ");
        //Calculate average of customer rating in scale of 1-5

        System.out.print("Rate the product between 1 to 5: ");
        int num1 = in.nextInt();
        if (num1 > 5 || num1 < 1)
            System.out.println("Wrong Input, Enter number between 1-5.");


        System.out.print("Rate the product between 1 to 5: ");
        int num2 = in.nextInt();
        if (num2 > 5 || num2 < 1)
            System.out.println("Wrong Input, Enter number between 1-5.");

        System.out.print("Rate the product between 1 to 5: ");
        int num3 = in.nextInt();
        if (num3 > 5 || num3 < 1)
            System.out.println("Wrong Input, Enter number between 1-5.");

        System.out.print("Rate the product between 1 to 5: ");
        int num4 = in.nextInt();
        if (num4 > 5 || num4 < 1)
            System.out.println("Wrong Input, Enter number between 1-5.");

        System.out.print("Rate the product between 1 to 5: ");
        int num5 = in.nextInt();
        if (num5 > 5 || num5 < 1)
            System.out.println("Wrong Input, Enter number between 1-5.");

        int avg_feed = (num1 + num2 + num3 + num4 + num5) / 5;

        System.out.println("Average feedback is: " + avg_feed);
        if (avg_feed == 1)
            System.out.println("Product is Bad");
        else if (avg_feed == 2)
            System.out.println("Product is Satisfactory");
        else if (avg_feed == 3)
            System.out.println("Product is Good");
        else if (avg_feed == 4)
            System.out.println("Product is Very Good");
        else if(avg_feed == 5)
            System.out.println("Product is Awesome");
        else
            System.out.println("INPUT IS WRONG IN FEEDBACK");

    }
}

